# Set to either 0 or 1
DEBUG=1

# Host receiving your emails
# for Office 365, use smtp://smtp.office365.com:587
# for Google, use smtps://smtp.gmail.com:465
SMTP_HOST='smtp://smtp.office365.com:587'

# Mails come from this address 
SMTP_SENDER='redmine@foo.bar'

# Account used for SMTP authentication in user:password format
SMTP_USER='redmine@foo.bar:kewl_password'

# Database type
# for PostgreSQL, use 'postgresql'
# for SQLite, use 'sqlite'
# for MySQL, use 'mysql'
# for SQL Server, use 'mssql'
DB_TYPE='postgresql'

# Database file, only used by SQLite
DB_FILE='/opt/redmine/db/redmine.sqlite3'

# Database hostname, skip with SQLite
DB_HOST='127.0.0.1'

# Database port, skip with SQLite
DB_PORT='5432'

# Database name, skip with SQLite
DB_NAME='redmine'

# Database user, skip with SQLite
DB_USER='redmine'

# Database password, skip with SQLite
DB_PASS='kewl_password'

# URL of your Redmine instance
REDMINE_URL='http://redmine.foo.bar'

# Recipient that will be added for reports when generated with new_report.sh
DEFAULT_RCPT='admin@foo.bar'
